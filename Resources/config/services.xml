<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cubalider_sms_queue.entity.bulk.class">Cubalider\Component\Sms\Entity\Bulk</parameter>
        <parameter key="cubalider_sms_queue.entity.message.class">Cubalider\Component\Sms\Entity\Message</parameter>
    </parameters>

    <services>
        <service id="cubalider_sms_queue.bulk_manager" class="Cubalider\Component\Sms\Manager\BulkManager">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%cubalider_sms_queue.entity.bulk.class%</argument>
        </service>
        <service id="cubalider_sms_queue.message_manager" class="Cubalider\Component\Sms\Manager\MessageManager">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%cubalider_sms_queue.entity.message.class%</argument>
            <argument type="service" id="cubalider_sms_queue.bulk_manager" />
        </service>
    </services>
</container>
